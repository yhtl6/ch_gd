<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>农产品详情</title>
    <meta name="keywords" content="">
    <meta name="description" content="">

    <%include public_css%>
    <!--图片上传-->
    <link rel="stylesheet" type="text/css" href="/public/css/plugins/webuploader/webuploader.css">
    <link rel="stylesheet" type="text/css" href="/public/css/plugins/webuploader/webuploader-demo.css">
    <link rel="stylesheet" type="text/css" href="/public/css/plugins/simditor/simditor.css" />
    <link href="/public/css/plugins/sweetalert/sweetalert.css" rel="stylesheet">
</head>
<style>
    .table{
        margin-bottom: 0;
    }
    .avatar-uploader .el-upload:hover {
        border-color: #20a0ff;
    }
    .avatar-uploader-icon {
        font-size: 28px;
        color: #8c939d;
        width: 178px;
        height: 178px;
        line-height: 178px;
        text-align: center;
    }
    .avatar {
        width: 178px;
        height: 178px;
        display: block;
        border: 1px dashed #d9d9d9;
        border-radius: 6px;
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }
</style>
<body class="gray-bg" >
    <div class="wrapper wrapper-content" id="app">

        <div class="row">

            <div class="col-sm-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>农产品详情</h5>
                    </div>
                    <div class="ibox-content">
                        <form class="form-horizontal m-t" id="dataform">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">产品图片：</label>
                                <div class="col-sm-2" style="margin-top: 7px; ">
                                    <img :src="form.bg_file" class="avatar">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">农产品名称：</label>
                                <div class="col-sm-2 control-label" style="text-align: center;">
                                    <label style="text-align: center" v-text="form.name"></label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">种类：</label>
                                <div class="col-sm-2 control-label" style="text-align: center;">
                                    <label style="text-align: center">{{form.type}}</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">创建时间：</label>
                                <div class="col-sm-2 control-label" style="text-align: center;">
                                    <label style="text-align: center">{{form.create_date}}</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">产品描述：</label>
                                <div class="col-sm-2 control-label" style="text-align: center;">
                                    <label style="text-align: center">{{form.desc}}</label>
                                </div>
                            </div>
                            
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-2">
                                    <button class="btn btn-default" type="button" onclick="window.history.go(-1)" style="margin-left:30px">返回</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!-- 全局js -->
    <%include public_js%>

        <!-- 自定义js -->
        <script src="/public/js/content.js?v=1.0.0"></script>

        <!-- jQuery Validation plugin javascript-->
        <script src="/public/js/plugins/validate/jquery.validate.min.js"></script>
        <script src="/public/js/plugins/validate/messages_zh.min.js"></script>
        <script src="/public/js/plugins/sweetalert/sweetalert.min.js"></script>

        <!-- simditor -->
        <script type="text/javascript" src="/public/js/plugins/simditor/module.js"></script>
        <script type="text/javascript" src="/public/js/plugins/simditor/uploader.js"></script>
        <script type="text/javascript" src="/public/js/plugins/simditor/hotkeys.js"></script>
        <script type="text/javascript" src="/public/js/plugins/simditor/simditor.js"></script>

        <!--图片上传-->
        <script src="/public/js/plugins/webuploader/webuploader.js"></script>

        <script>

            $().ready(function () {
                //初始化vue    
                app = new Vue({
                    el: '#app',
                    data: {
                        form:{
                            id:'<%=data.id%>',
                            name: '<%=data.name%>',
                            create_date:'<%=data.create_date%>',
                            type:'<%=data.type%>',
                            bg_file : '<%=data.pic_url%>',
                            desc : '<%=data.desc%>'
                        },
                        editor:'',
                        icon:"<i class='fa fa-times-circle'></i>",
                        addbutton:true

                    },
                    mounted: function(){
                        var type = '';
                        if(app.form.type=='0'){
                            type='粮油';
                        }else if(app.form.type=='1'){
                            type='水果';
                        }else if(app.form.type=='2'){
                            type='蔬菜';
                        }else if(app.form.type=='3'){
                            type='其他';
                        }
                        app.form.type = type;
                    },
                    methods: {
                    }
                });
            });
        </script>
</body>

</html>