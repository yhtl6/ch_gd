        <!--图片上传-->
        <script src="/public/js/plugins/webuploader/webuploader.js"></script>

        <script>

            $().ready(function () {
                //初始化vue    
                app = new Vue({
                    el: '#app',
                    data: {
                        form:{
                            comp_name : '<%=data.comp_name%>',
                            bill_date : '<%=data.bill_date%>',
                            c1:'<%=data.c1%>',
                            c2:'<%=data.c2%>',
                            c3:'<%=data.c3%>',
                            c4:'<%=data.c4%>',
                            c5:'<%=data.c5%>',
                            c6:'<%=data.c6%>',
                            c7:'<%=data.c7%>',
                            c8:'<%=data.c8%>',
                            c9:'<%=data.c9%>',
                            c10:'<%=data.c10%>',
                            c11:'<%=data.c11%>',
                            c12:'<%=data.c12%>',
                            create_date:'<%=data.push_date%>',
                            status:'<%=data.status%>',
                            comfir_name:'<%=data.comfir_name%>',
                            comfir_date:'<%=data.comfirm_date%>',
                            content:'<%-data.content%>'

                        },
                        status:['已同意','待确认','已拒绝','待发送'],
                        icon:"<i class='fa fa-times-circle'></i>",
                        addbutton:true

                    },
                    mounted: function(){
                    },
                    computed:{
                        computed_bill_date:function () {
                            var value = this.form.bill_date;
                            return value.substring(0,4)+"年"+value.substring(4,6)+"月";
                        }
                    },
                    methods: {
                    }
                });
            });

            function gofather(){
                window.location.href = '/admin/bill/tolist?'+'page=<%=page%>&search=<%=search%>&pageSize=<%=pageSize%>&search_date=<%=search_date%>&search_status=<%=search_status%>';
            }
            function to_edit(){
                window.location.href = '/admin/bill/toedit?id=<%=data.id%>&page=<%=page%>&search=<%=search%>&pageSize=<%=pageSize%>&search_date=<%=search_date%>&search_status=<%=search_status%>';
            }

            //导出
            function expone(){
                window.open("/admin/bill/expone?id=<%=data.id%>");
            }

            function recall(){
                let value = '<%=data.id%>';
                swal({
                    title: "警告",
                    text: "您确定要撤回这条账单吗？请谨慎操作！",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "撤回",
                    cancelButtonText:'取消',
                    closeOnConfirm: false
                }, function () {
                    $.post("/admin/bill/recall",{id:value},function(res){
                        if(res.errno==200){
                            swal("撤回成功！", "您已经撤回了这条账单。", "success");
                            setTimeout(function () {
                                refresh_table();//刷新表单
                            }, 1000);
                        }else{
                            swal("撤回失败！", res.msg, "error");
                        }
                    });
                });
            }

        </script>


